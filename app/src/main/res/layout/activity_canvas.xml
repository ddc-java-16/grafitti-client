<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <edu.cnm.deepdive.graffiti.view.CanvasView
    android:id="@+id/canvas"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/canvas_name"/>

  <EditText
    android:id="@+id/canvas_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:tooltipText="Canvas Name"
    app:layout_constraintBottom_toTopOf="@id/create_canvas"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <Button
    android:id="@+id/create_canvas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/refresh_canvas"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/select_canvas"
    android:text="Create Canvas"/>

  <Button
    android:id="@+id/refresh_canvas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/select_brush"
    android:text="Refresh Canvas"/>

  <Button
    android:id="@+id/select_canvas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Canvas"
    app:layout_constraintStart_toEndOf="@id/create_canvas"
    app:layout_constraintBottom_toBottomOf="@id/create_canvas"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/create_canvas"/>

  <Button
    android:id="@+id/select_brush"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Brush"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/refresh_canvas"
    app:layout_constraintEnd_toEndOf="parent"/>

  <androidx.fragment.app.FragmentContainerView
    android:id="@+id/fragmentcontainerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>